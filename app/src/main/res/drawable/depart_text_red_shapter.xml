<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 设置透明背景色 -->
    <solid android:color="@color/base_text_red" />

    <!-- 设置一个黑色边框 -->
    <stroke
        android:width="4px"
        android:color="@color/base_text_red"/>
    <!-- 设置四个圆角的半径 -->
    <corners
        android:bottomLeftRadius="110px"
        android:bottomRightRadius="110px"
        android:topLeftRadius="110px"
        android:topRightRadius="110px" />
    <!-- 设置一下边距,让空间大一点 -->
    <padding
        android:bottom="6dp"
        android:left="20dp"
        android:right="20dp"
        android:top="6dp"/>

</shape>