<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bottom_lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/x10"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ac_botom_xinlang"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x70"
            android:layout_marginLeft="@dimen/x10"
            android:gravity="center"
            android:text="新浪微博"
            android:textSize="@dimen/x16"
            android:visibility="gone" />

        <TextView
            android:id="@+id/ac_botom_qqfrends"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x80"
            android:layout_marginLeft="@dimen/x10"
            android:gravity="center"
            android:text="QQ好友"
            android:textSize="@dimen/x16"
            android:visibility="gone" />

        <TextView
            android:id="@+id/ac_botom_qqkj"
            android:layout_width="@dimen/x110"
            android:layout_height="@dimen/x60"
            android:layout_marginLeft="@dimen/x10"
            android:gravity="center"
            android:text="QQ空间"
            android:textSize="@dimen/x16"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/wx_friends"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/umeng_socialize_wechat"
                android:layout_width="66dp"
                android:layout_height="66dp" />
            <TextView
                android:layout_marginRight="@dimen/x10"
                android:id="@+id/ac_botom_wxfrends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_weight="1"
                android:gravity="center"
                android:text="微信好友"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wx_friends_place"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/umeng_socialize_wxcircle"
                android:layout_width="66dp"
                android:layout_height="66dp" />
            <TextView
                android:layout_marginRight="@dimen/x10"
                android:gravity="center"
                android:id="@+id/ac_botom_xinkj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_weight="1"
                android:text="微信空间"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>