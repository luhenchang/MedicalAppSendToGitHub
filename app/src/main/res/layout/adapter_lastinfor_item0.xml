<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ling_item1"
    android:orientation="vertical"
    >
        <TextView
            android:layout_marginTop="@dimen/x18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x40"
            android:paddingRight="@dimen/x40"
            android:text="根据你选择的病症，以下是可能符合的疾病"
            android:textColor="@color/base_text_red"
            android:textSize="@dimen/x19" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/lastinforactivity_top" />

        <LinearLayout
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x16"
            android:orientation="horizontal">
            <com.example.ls.shoppingmall.community.utis.HorizontalListView
                android:layout_marginLeft="@dimen/x10"
                android:id="@+id/community_item1_horlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

            </com.example.ls.shoppingmall.community.utis.HorizontalListView>

        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/x10"
            android:background="#efefef"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x6"/>
        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:contentDescription="@string/app_name"
                android:id="@+id/adpter_item0_iv1"
                android:layout_marginTop="@dimen/x20"
                android:layout_marginStart="@dimen/x20"
                android:background="@drawable/lastinforactivity_mesage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginStart="@dimen/x8"
                android:layout_marginTop="@dimen/x28"
                android:id="@+id/adapter_item0_tv1"
                android:textStyle="bold"
                android:textColor="#60b3c4"
                android:textSize="@dimen/x13"
                android:paddingEnd="@dimen/x11"
                android:layout_toEndOf="@+id/adpter_item0_iv1"
                android:text="根据你的病症，我们觉得你有必要去医院检查，请在地图上查看最近的医院和医生"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/x25"
                android:id="@+id/adapter_item0_tv_sure"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/x16"
                android:text="进入地图"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_below="@+id/adapter_item0_tv1"
                android:background="@drawable/selected_lager_red_shapter_ager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40" />
            <View
                android:layout_marginTop="@dimen/x15"
                android:layout_below="@+id/adapter_item0_tv_sure"
                android:background="#efefef"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x6"/>
        </RelativeLayout>
</LinearLayout>
