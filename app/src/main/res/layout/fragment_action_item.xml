<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ft_message_term_li">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80">

        <TextView
            android:id="@+id/ft_action_item_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x18"
            android:text="公告标题"
            android:textColor="#262626"
            android:textSize="@dimen/x15"
            />
        <TextView
            android:layout_marginLeft="@dimen/x4"
            android:layout_toRightOf="@+id/ft_action_item_tv_title"
            android:id="@+id/tv_reader_already"
            android:layout_marginTop="@dimen/x15"
            android:layout_marginRight="@dimen/x20"
            android:layout_width="@dimen/x5"
            android:layout_height="@dimen/x5"
            android:background="@drawable/message_bg_red"
            android:gravity="center" />
        <!--ft_action_item_tv_title ft_action_item_content_tv ft_message_term_li check_box-->
        <TextView
            android:id="@+id/ft_action_item_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ft_action_item_tv_title"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x8"
            android:ellipsize="end"
            android:maxEms="16"
            android:maxLines="1"
            android:text="文字内容文字能呢问完了完了了我熟练度冯老师"
            android:textColor="#808080"
            android:textSize="@dimen/x13" />

        <ImageView
            android:contentDescription="@string/app_name"
            android:id="@+id/check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="@dimen/x20"
            android:gravity="center"
            android:src="@drawable/ic_uncheck"
            android:visibility="visible" />

    </RelativeLayout>

</LinearLayout>