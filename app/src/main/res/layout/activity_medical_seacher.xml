<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x55"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:elevation="@dimen/x1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x54"
            android:gravity="center_vertical">

            <ImageView
                android:layout_marginRight="@dimen/x16"
                android:id="@+id/back_to_after"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x13"
                android:background="@drawable/back_img" />


            <EditText
                android:layout_weight="1"
                android:singleLine="true"
                android:layout_toRightOf="@+id/back_to_after"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:id="@+id/tv_search_home"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:layout_marginLeft="5dp"
                android:background="@drawable/search_home_shape"
                android:drawableLeft="@drawable/search_seacher_iv"
                android:drawablePadding="5dp"
                android:textColor="#999999"
                android:padding="5dp"
                android:hint="输入疾病找医生"
                android:textColorHint="@color/color_b7b8bd"
                android:textSize="@dimen/x13" />
            <TextView
                android:layout_marginLeft="@dimen/x10"
                android:id="@+id/medical_search_tv"
                android:layout_marginRight="@dimen/x20"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:text="搜索"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>