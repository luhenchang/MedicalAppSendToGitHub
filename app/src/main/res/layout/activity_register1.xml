    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/search_home_shape"
        android:gravity="center_vertical"
        app:layout_heightPercent="6%"
        app:layout_widthPercent="86%">

        <ImageView
            style="@style/Login_image"
            android:src="@drawable/user_login_phone" />

        <View style="@style/Login_view" />

        <EditText
            android:id="@+id/regist_phone_et"
            style="@style/Register_Editer"
            android:layout_width="wrap_content"
            android:hint="@string/Registered_inputphone_hint" />

        <Button
            android:id="@+id/regest_delet_phone_bt"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginRight="@dimen/x25"
            android:background="@drawable/delete"
            android:visibility="invisible" />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/search_home_shape"
        android:gravity="center_vertical"
        app:layout_heightPercent="6%"
