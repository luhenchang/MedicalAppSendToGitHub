    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/search_home_shape"
        android:gravity="center_vertical"
        app:layout_heightPercent="6%"
        app:layout_marginTopPercent="2%"
        app:layout_widthPercent="86%">

        <ImageView
            style="@style/Login_image"
            android:src="@drawable/user_login_clock" />

        <View style="@style/Login_view" />

        <EditText
            android:id="@+id/regist_input_password_et"
            style="@style/Login_Editer"
            android:layout_width="wrap_content"
            android:hint="@string/Login_password_hint" />

        <Button
            android:id="@+id/regest_delet_password_bt"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginRight="@dimen/x25"
            android:background="@drawable/delete"
            android:visibility="invisible" />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/search_home_shape"
        android:gravity="center_vertical"
        app:layout_heightPercent="6%"
        app:layout_marginTopPercent="2%"
        app:layout_widthPercent="86%">

        <ImageView
            style="@style/Login_image"
            android:src="@drawable/user_login_message" />

        <View style="@style/Login_view" />

        <EditText
            android:id="@+id/regist_invit_et"
            style="@style/Login_Editer"
            android:layout_width="wrap_content"
            android:hint="@string/Registered_ma" />

        <Button
            android:id="@+id/regest_delet_invite_bt"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginRight="@dimen/x25"
            android:background="@drawable/delete"
            android:visibility="invisible" />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        app:layout_marginTopPercent="3%"
        app:layout_widthPercent="86%">

        <CheckBox
            android:id="@+id/regist_allowed_cb"
            android:layout_width="@dimen/x13"
            android:layout_height="@dimen/x13"
            android:layout_gravity="center_vertical"
            android:background="@drawable/register_checkbox"
            android:button="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x10"
            android:text="@string/Registered_allow"
            android:textColor="#595959"
            android:textSize="@dimen/x12" />

        <TextView
            android:id="@+id/tv_user_rigist_need"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Registered_agreedment"
            android:textColor="#fb7574"
            android:textSize="@dimen/x12"
            android:textStyle="bold" />
    </com.zhy.android.percent.support.PercentLinearLayout>
