<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="bottom"
        android:id="@+id/bottom_lin"
        android:layout_marginBottom="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:visibility="gone"
            android:textSize="@dimen/x16"
            android:id="@+id/ac_botom_xinlang"
            android:layout_marginLeft="@dimen/x10"
            android:gravity="center"
            android:text="新浪微博"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x70" />
        <TextView
            android:visibility="gone"
            android:textSize="@dimen/x16"
            android:id="@+id/ac_botom_qqfrends"
            android:layout_marginLeft="@dimen/x10"
            android:gravity="center"
            android:text="QQ好友"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x80" />
        <TextView
            android:visibility="gone"
            android:textSize="@dimen/x16"
            android:id="@+id/ac_botom_qqkj"
            android:layout_marginLeft="@dimen/x10"
            android:gravity="center"
            android:text="QQ空间"
            android:layout_width="@dimen/x110"
            android:layout_height="@dimen/x60" />
        <TextView
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="@dimen/x16"
            android:id="@+id/ac_botom_wxfrends"
            android:layout_marginLeft="@dimen/x10"
            android:gravity="center"
            android:drawableTop="@drawable/umeng_socialize_wechat"
            android:text="微信好友"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="@dimen/x16"
            android:id="@+id/ac_botom_xinkj"
            android:layout_marginLeft="@dimen/x10"
            android:drawableTop="@drawable/umeng_socialize_wxcircle"
            android:gravity="center"
            android:text="微信空间"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>