<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ls.shoppingmall.home.activity.BodySelectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/search_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="@mipmap/delete" />

        <RelativeLayout

            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="30dp">

            <EditText
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/search_home_shape"
                android:clickable="true"
                android:drawableLeft="@mipmap/sousuo"
                android:drawablePadding="5dp"
                android:hint="请输入活动关键字"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:textColorHint="#999999"
                android:textSize="12sp" />
            <ImageView
                android:id="@+id/search_dele_iv"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_search_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:text="搜索"
            android:textColor="#333333"
            android:textSize="15sp" />
    </LinearLayout>

    <include layout="@layout/activity_body_middle_item" />

    <!--<ListView
        android:id="@+id/select_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
-->

</LinearLayout>
