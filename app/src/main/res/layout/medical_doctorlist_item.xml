<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/medical_information_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/inquery_medical_item1_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x35">

            <TextView style="@style/inquery_medicals_item1_tv_top" />

            <TextView
                android:id="@+id/com_adapter_item1_more_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/x15"
                android:layout_marginTop="@dimen/x3"
                android:gravity="center"
                android:text="查看更多"
                android:textColor="@color/messge_right_text" />
        </LinearLayout>

        <View style="@style/inquery_medicals_item_view" />
    </LinearLayout>

   <!-- <android.support.v7.widget.CardView
        app:cardElevation="@dimen/x4"
        android:layout_margin="@dimen/x4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">-->

        <RelativeLayout
            android:id="@+id/ad_medical_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.ls.shoppingmall.utils.layoututils.CircleImageView
                android:id="@+id/medical_header_iv"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/x50"
                android:layout_marginTop="@dimen/y10"
                android:layout_marginLeft="@dimen/x10"
                android:background="@drawable/medical_header_iv" />
            <!--<com.example.ls.shoppingmall.utils.layoututils.CircleImageView style="@style/inquery_medicals_item1_top_image" />-->

            <TextView style="@style/inquery_medicals_item1_name_tv" />

            <TextView style="@style/inquery_medicals_item1_name1_tv" />

            <TextView style="@style/inquery_medicals_item1_name2_tv" />

            <TextView style="@style/inquery_medicals_item1_name3_tv" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/medical_informations"
                android:layout_marginTop="14dp"
                android:background="@color/inqurey_item_viewb" />
        </RelativeLayout>
    <!--</android.support.v7.widget.CardView>-->
</LinearLayout>