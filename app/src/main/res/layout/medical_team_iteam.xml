<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80">
        <com.example.ls.shoppingmall.utils.layoututils.CircleImageView
            android:id="@+id/iv_medical_team_header"
            android:layout_marginLeft="@dimen/x10"
            android:background="@drawable/medical_header_iv"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"/>
        <LinearLayout
            android:paddingLeft="@dimen/x10"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_medical_team_title"
                android:textSize="18sp"
                android:text="某某医师团"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_medical_team_name"
                android:layout_marginTop="@dimen/x5"
                android:textColor="@color/base_text_red"
                android:text="医师团"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>